<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@android:color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="47KM North of Vancouver"
                android:textSize="14sp"
                android:textStyle="bold"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h4"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvMagDesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="Magnitude 3.7"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:bootstrapBrand="primary"
                    app:bootstrapHeading="h4"
                    app:roundedCorners="false"
                    />
                <TextView
                    android:id="@+id/tvDateDesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="Magnitude 3.7"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:bootstrapBrand="primary"
                    app:bootstrapHeading="h4"
                    app:roundedCorners="false"
                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMagnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="Magnitude 3.8"
                android:textSize="18sp"
                android:textStyle="italic"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h4"
                app:roundedCorners="false"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="01/01/2010 14:35"
                android:textSize="15sp"
                android:textStyle="italic"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h4"
                app:roundedCorners="false"
                />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

